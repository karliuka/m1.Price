<config>
	<modules>
		<Faonni_Price>
			<version>1.2.2</version>
		</Faonni_Price>
	</modules>
	<global>
		<blocks>
			<faonni_price>
				<class>Faonni_Price_Block</class>
			</faonni_price>			
		</blocks>	
		<helpers>
			<faonni_price>
				<class>Faonni_Price_Helper</class>
			</faonni_price>
		</helpers>
		<models>
            <faonni_price>
                <class>Faonni_Price_Model</class>
				<resourceModel>faonni_price_resource</resourceModel>
            </faonni_price>
			<directory>
				<rewrite>
					<currency>Faonni_Price_Model_Currency</currency>
				</rewrite>
			</directory>
			<faonni_price_resource>
				<class>Faonni_Price_Model_Resource</class>
				<entities>		  
					<round_rule>
						<table>faonni_price_round_rule</table>
					</round_rule> 					
				</entities>
			</faonni_price_resource>			
		</models>
		<resources>
			<faonni_price_setup>
				<setup>
					<module>Faonni_Price</module>
				</setup>
			</faonni_price_setup>
			<faonni_price_write>
				<connection>
					<use>core_write</use>
				</connection>
			</faonni_price_write>
			<faonni_price_read>
				<connection>
					<use>core_read</use>
				</connection>
			</faonni_price_read>
		</resources>		
	</global>
    <frontend>
        <events>
            <catalog_product_view_config>
                <observers>
                    <faonni_price>
                        <class>faonni_price/observer</class>
                        <method>updatePrecision</method>
                    </faonni_price>
                </observers>
            </catalog_product_view_config>
        </events>
	</frontend>	
    <adminhtml>
        <layout>
            <updates>
                <faonni_price>
                    <file>faonni/price.xml</file>
                </faonni_price>
            </updates>
        </layout>	
        <translate>
            <modules>
                <Faonni_Price>
                    <files>
                        <default>Faonni_Price.csv</default>
                    </files>
                </Faonni_Price>
            </modules>
        </translate>
    </adminhtml>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <Faonni_Price before="Mage_Adminhtml">Faonni_Price_Adminhtml</Faonni_Price>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>	
    <default>
        <currency>
            <price>
                <enabled>1</enabled>
                <base_price>0</base_price>
				<manage>0</manage>
                <type>floor</type>
                <swedish_fraction>0.05</swedish_fraction>
				<precision>0</precision>
                <subtract>1</subtract>
				<amount>0.01</amount>
				<show_decimal_zero>1</show_decimal_zero>
				<replace_zero_price>0</replace_zero_price>
				<zero_price_text>free</zero_price_text>
            </price>
        </currency>
    </default>	
</config> 