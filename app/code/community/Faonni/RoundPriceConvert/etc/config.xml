<config>
	<modules>
		<Faonni_RoundPriceConvert>
			<version>0.1.1</version>
		</Faonni_RoundPriceConvert>
	</modules>
	<global>
		<helpers>
			<faonni_roundpriceconvert>
				<class>Faonni_RoundPriceConvert_Helper</class>
			</faonni_roundpriceconvert>
		</helpers>
		<models>
            <faonni_roundpriceconvert>
                <class>Faonni_RoundPriceConvert_Model</class>
            </faonni_roundpriceconvert>
			<directory>
				<rewrite>
					<currency>Faonni_RoundPriceConvert_Model_Currency</currency>
				</rewrite>
			</directory>			
		</models>		
	</global>
    <adminhtml>
        <translate>
            <modules>
                <Faonni_RoundPriceConvert>
                    <files>
                        <default>Faonni_RoundPriceConvert.csv</default>
                    </files>
                </Faonni_RoundPriceConvert>
            </modules>
        </translate>
    </adminhtml>	
    <default>
        <catalog>
            <roundpriceconvert>
                <active>1</active>
                <type>round</type>
                <subtract>1</subtract>
                <amount>0.01</amount>
            </roundpriceconvert>
        </catalog>
    </default>	
</config> 